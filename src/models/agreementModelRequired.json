            }
        }
    },
    "scopedConfiguration": {
        "type": "object",
        "properties": {
            "scope": {
                "type": "object",
                "patternProperties": {
                    "^[a-zA-Z0-9]*$": {}
                }
            },
            "value": {
                "oneOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "number"
                    },
                    {
                        "type": "boolean"
                    }
                ]
            }
        }
    },
    "scope": {
        "type": "object",
        "patternProperties": {
            "^[a-zA-Z0-9]*$": {}
        }
    },
    "pricing": {
        "type": "object",
        "properties": {
